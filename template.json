{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Create a publicly accessible S3 bucket configured for website access with a deletion policy.",
  "Parameters": {
    "BucketName": {
      "Type": "String",
      "Description": "The S3 bucket name for hosting the todo static site files.",
      "AllowedPattern": "(?!-)[a-zA-Z0-9-.]{1,63}(?<!-)",
      "ConstraintDescription": "must be a unique valid bucket name."
    }
  },
  "Mappings": {
    "Region2S3WebsiteSuffix": {
      "us-east-1": {
        "Suffix": ".s3-website-us-east-1.amazonaws.com"
      },
      "us-west-1": {
        "Suffix": ".s3-website-us-west-1.amazonaws.com"
      },
      "us-west-2": {
        "Suffix": ".s3-website-us-west-2.amazonaws.com"
      },
      "eu-west-1": {
        "Suffix": ".s3-website-eu-west-1.amazonaws.com"
      },
      "eu-west-2": {
        "Suffix": ".s3-website-eu-west-2.amazonaws.com"
      },
      "eu-west-3": {
        "Suffix": ".s3-website-eu-west-3.amazonaws.com"
      },
      "ap-northeast-1": {
        "Suffix": ".s3-website-ap-northeast-1.amazonaws.com"
      },
      "ap-northeast-2": {
        "Suffix": ".s3-website-ap-northeast-2.amazonaws.com"
      },
      "ap-northeast-3": {
        "Suffix": ".s3-website-ap-northeast-3.amazonaws.com"
      },
      "ap-southeast-1": {
        "Suffix": ".s3-website-ap-southeast-1.amazonaws.com"
      },
      "ap-southeast-2": {
        "Suffix": ".s3-website-ap-southeast-2.amazonaws.com"
      },
      "ap-south-1": {
        "Suffix": ".s3-website-ap-south-1.amazonaws.com"
      },
      "us-east-2": {
        "Suffix": ".s3-website-us-east-2.amazonaws.com"
      },
      "ca-central-1": {
        "Suffix": ".s3-website-ca-central-1.amazonaws.com"
      },
      "sa-east-1": {
        "Suffix": ".s3-website-sa-east-1.amazonaws.com"
      },
      "cn-north-1": {
        "Suffix": ".s3-website.cn-north-1.amazonaws.com.cn"
      },
      "cn-northwest-1": {
        "Suffix": ".s3-website.cn-northwest-1.amazonaws.com.cn"
      },
      "eu-central-1": {
        "Suffix": ".s3-website-eu-central-1.amazonaws.com"
      }
    }
  },
  "Resources": {
    "S3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "PublicRead",
        "WebsiteConfiguration": {
          "IndexDocument": "index.html",
          "ErrorDocument": "error.html"
        },
        "CorsConfiguration": {
          "CorsRules": [
            {
              "AllowedHeaders": [
                "Authorization"
              ],
              "AllowedMethods": [
                "GET"
              ],
              "AllowedOrigins": [
                "*"
              ],
              "Id": "AllowGET"
            }
          ]
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "Todo"
          }
        ]
      },
      "DeletionPolicy": "Delete"
    },
    "DDBTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "todo",
        "AttributeDefinitions": [
          {
            "AttributeName": "id",
            "AttributeType": "N"
          },
          {
            "AttributeName": "Title",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "id",
            "KeyType": "HASH"
          },
          {
            "AttributeName": "Title",
            "KeyType": "RANGE"
          }
        ],
        "ProvisionedThroughput" : {
          "ReadCapacityUnits" : "5",
          "WriteCapacityUnits" : "5"
        }
      }
    }
  },
  "Outputs": {
    "WebsiteURL": {
      "Value": {
        "Fn::GetAtt": [
          "S3Bucket",
          "WebsiteURL"
        ]
      },
      "Description": "URL for website hosted on S3"
    },
    "S3BucketSecureURL": {
      "Value": {
        "Fn::Join": [
          "",
          [
            "https://",
            {
              "Fn::GetAtt": [
                "S3Bucket",
                "DomainName"
              ]
            }
          ]
        ]
      },
      "Description": "Name of S3 bucket to hold website content"
    }
  }
}